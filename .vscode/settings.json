{
  // Default for all files
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,
  // Python-specific overrides
  "[python]": {
    "editor.tabSize": 4,
    "editor.insertSpaces": true
  },
  // JavaScript/TypeScript overrides
  "[javascript]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true
  },
  "[typescript]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true
  }
}